#!/bin/bash

info=$(curl -s https://weathernews.jp/onebox/tenki/tokyo/13208/ | pup -i 0 '.weather-now__ul' | sed '/<img/d;/ul/d;/li/d;/span/d;')

trans='s/æ™´ã‚Œ/â˜€ï¸/;'
trans+='s/ã†ã™ãã‚‚ã‚Š/ðŸŒ¤ï¸/;'
trans+='s/é›ª/â„/;'
trans+='s/ã¿ãžã‚Œ/â„/;'
trans+='s/å°é›¨/ðŸŒ§/;'
trans+='s/é›¨/ðŸŒ§/;'
trans+='s/ãã‚‚ã‚Š/â˜/;'

status=$(sed -n 2p <<< $info | sed $trans)
temper=$(sed -n 4p <<< $info)

echo $status $temper
